{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["@nuxt/types", "@types/node", "vue"], 
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "#app/*": ["./node_modules/.nuxt/types/app/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "nuxt.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": ["node_modules"]
}
